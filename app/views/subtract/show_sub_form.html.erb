<h1>New subtraction</h1>

<form action="/wizard_subtract" method="get">
  <div>
    <label for="first_number">Subtract this:</label>
    <input type="text" name="first_number" id="first_number" placeholder="Enter the first number">
  </div>

  <div>
    <label for="second_number">from this: </label>
    <input type="text" name="second_number" id="second_number" placeholder="Enter the second number">
  </div>

  <button type="submit">Subtract!</button>
</form>
